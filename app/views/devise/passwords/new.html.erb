<div class="login">
  <div class="card">
    <div class="card-body">
			<h2>Forgot your password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>

			  <div class="form-group top-buffer">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control top-buffer' %>
			  </div>

			  <div class="form-group top-buffer d-grid gap-2 mx-auto">
			    <%= f.submit "Send me reset password instructions", class: 'btn btn-secondary' %>
			  </div>
			<% end %>

      <div class="auth-links top-buffer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
