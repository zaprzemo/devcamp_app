<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], :title => "Przemek Zastawny Portfolio", :sticky => false, :time => 1000, :class_name => "custom_gritter") %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], :title => "Przemek Zastawny Portfolio", :sticky => false, :time => 1000, :class_name => "custom_gritter") %>
<% else %>
	<%= js add_gritter(flash[:notice], :title => "Przemek Zastawny Portfolio", :sticky => false, :time => 1000, :class_name => "custom_gritter") %>
<% end %>
